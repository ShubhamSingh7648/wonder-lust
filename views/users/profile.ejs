<% layout("/layouts/boilerplate") -%>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                        <img 
                            src="<%= user.profilePicture %>" 
                            alt="Profile Picture" 
                            class="img-fluid rounded-circle me-4" 
                            style="width: 150px; height: 150px; object-fit: cover;"
                        >
                        <div>
                            <h2 class="card-title fw-bold"><%= user.fullName || user.username %></h2>
                            <p class="text-muted mb-0">@<%= user.username %></p>
                            <small class="text-muted">Joined on <%= user.joinDate.toLocaleDateString() %></small>
                        </div>
                    </div>

                    <hr>

                    <h5 class="mt-4">About Me</h5>
                    <p class="text-muted"><%= user.bio || 'No bio provided.' %></p>

                    <h5 class="mt-4">Details</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="fas fa-envelope me-2 text-secondary"></i>
                            <strong>Email:</strong> <%= user.email %>
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-map-marker-alt me-2 text-secondary"></i>
                            <strong>Location:</strong> <%= user.location || 'Not specified' %>
                        </li>
                    </ul>

                    <a href="/profile/edit" class="btn btn-dark mt-4">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>
</div>