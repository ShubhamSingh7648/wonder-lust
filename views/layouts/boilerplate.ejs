<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wanderlust</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" xintegrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        /* Custom styles for the login/signup modal */
        .auth-modal .modal-content {
            border-radius: 1rem;
            border: none;
            box-shadow: 0 5px 25px rgba(0,0,0,0.15);
        }
        .auth-modal .modal-header {
            border-bottom: none;
            padding: 1.5rem 1.5rem 0 1.5rem;
        }
        .auth-modal .modal-header .btn-close {
            position: absolute;
            top: 15px;
            right: 15px;
        }
        .auth-modal .modal-body {
            padding: 1rem 1.5rem 1.5rem 1.5rem;
        }
        .auth-modal .form-control {
            height: 50px;
            border-radius: 0.5rem;
            background-color: #f7f7f7;
            border: 1px solid #ddd;
        }
        .auth-modal .form-control:focus {
            background-color: #fff;
            border-color: #fe424d;
            box-shadow: none;
        }
        .auth-modal .btn-primary {
            background-color: #fe424d;
            border-color: #fe424d;
            height: 50px;
            font-weight: 600;
            border-radius: 0.5rem;
        }
        .auth-modal .btn-primary:hover {
            background-color: #e03841;
            border-color: #e03841;
        }
        .auth-modal .auth-switch-link {
            color: #fe424d;
            cursor: pointer;
            text-decoration: none;
        }
        .auth-modal .auth-switch-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
   <%- include("../includes/navbar.ejs") %>
    
    <div class="container">
        <!-- This block will display success and error messages -->
        <% if(success && success.length) { %>
            <div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert">
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
    
        <% if(error && error.length) { %>
            <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <%- body %>
    </div>

    <%- include("../includes/footer.ejs") %>

    <!-- Login/Signup Modal -->
    <div class="modal fade auth-modal" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="authModalLabel">Login</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Login Form -->
                    <form id="loginForm" action="/login" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="login-username" class="form-label">Username</label>
                            <input name="username" id="login-username" type="text" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="login-password" class="form-label">Password</label>
                            <input name="password" id="login-password" type="password" class="form-control" required>
                        </div>
                        <button class="btn btn-primary w-100">Login</button>
                        <p class="text-center mt-3">
                            Don't have an account? <a href="#" class="auth-switch-link" id="switchToSignup">Sign Up</a>
                        </p>
                    </form>

                    <!-- Signup Form (hidden by default) -->
                    <form id="signupForm" action="/signup" method="POST" class="needs-validation d-none" novalidate>
                        <div class="mb-3">
                            <label for="signup-username" class="form-label">Username</label>
                            <input name="username" id="signup-username" type="text" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="signup-email" class="form-label">Email</label>
                            <input name="email" id="signup-email" type="email" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="signup-password" class="form-label">Password</label>
                            <input name="password" id="signup-password" type="password" class="form-control" required>
                        </div>
                        <button class="btn btn-primary w-100">Sign Up</button>
                        <p class="text-center mt-3">
                            Already have an account? <a href="#" class="auth-switch-link" id="switchToLogin">Login</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        // JavaScript to switch between Login and Signup forms in the modal
        const loginForm = document.getElementById('loginForm');
        const signupForm = document.getElementById('signupForm');
        const switchToSignup = document.getElementById('switchToSignup');
        const switchToLogin = document.getElementById('switchToLogin');
        const authModalLabel = document.getElementById('authModalLabel');

        switchToSignup.addEventListener('click', (e) => {
            e.preventDefault();
            loginForm.classList.add('d-none');
            signupForm.classList.remove('d-none');
            authModalLabel.textContent = 'Sign Up';
        });

        switchToLogin.addEventListener('click', (e) => {
            e.preventDefault();
            signupForm.classList.add('d-none');
            loginForm.classList.remove('d-none');
            authModalLabel.textContent = 'Login';
        });
    </script>
</body>
</html>
